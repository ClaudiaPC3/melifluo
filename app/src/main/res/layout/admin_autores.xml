<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#9EFFE0"


    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="#9EFFE0"
        android:text="limpiar"
        android:id="@+id/au_clean"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginTop="40dp"
        android:layout_marginRight="15dp">


    </LinearLayout>
    <TextView
        android:id="@+id/pre-autor"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:layout_marginRight="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="Autor: "
        android:textAlignment="center"
        android:textSize="20dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="10dp" >

        <TextView
            android:id="@+id/pre-id"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:text="ID: "
            android:textSize="20dp"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/au_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:inputType="numberDecimal"/>

    </LinearLayout>

       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="10dp" >

        <TextView
            android:id="@+id/pre-nombre"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:text="Nombre: "
            android:textSize="20dp"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/au_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="10dp" >

        <TextView
            android:id="@+id/pre-apellidoP_autor"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:text="Apellido Paterno: "
            android:textSize="20dp"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/au_app"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="10dp" >

        <TextView
            android:id="@+id/pre-apellidoM_autor"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:text="Apellido Materno: "
            android:textSize="20dp"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/au_apm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/au_consultar"
            android:text="Consultar"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="#FFFF"
            android:layout_marginEnd="5dp"/>
        <Button
            android:id="@+id/au_agregar"
            android:text="agregar"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="#FFFF"
            android:layout_marginEnd="5dp"/>
        <Button
            android:id="@+id/au_modificar"
            android:text="modificar"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="#FFFF"
            android:layout_marginEnd="5dp"/>
        <Button
            android:id="@+id/au_eliminar"
            android:text="eliminar"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="#FFFF"
            android:layout_marginEnd="5dp"/>

    </LinearLayout>




</LinearLayout>