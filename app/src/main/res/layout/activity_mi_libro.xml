<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#D3F1F1"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        >


        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent" />
            />
        <Button
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="Eliminar"
          />

    </LinearLayout>


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="10dp" >

        <TextView
            android:id="@+id/pre-titulo"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:text="Titulo: " />

        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="10dp" >

        <TextView
            android:id="@+id/pre-autores"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:text="Autor: " />

        <EditText
            android:id="@+id/autores"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="10dp" >

        <TextView
            android:id="@+id/pre-publicacion"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:text="Publicación: " />

        <EditText
            android:id="@+id/publicacion"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="10dp" >

        <TextView
            android:id="@+id/pre-numero_edicion"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:text="Num de Edición: " />

        <EditText
            android:id="@+id/numero_edicion"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="10dp" >

        <TextView
            android:id="@+id/pre-editorial"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:text="Editorial: " />

        <EditText
            android:id="@+id/editorial"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="10dp" >

        <TextView
            android:id="@+id/pre-categoria"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:text="Categoria: " />

        <EditText
            android:id="@+id/categoria"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="10dp" >

        <TextView
            android:id="@+id/pre-encuadernado"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:text="Encuadernado: " />

        <EditText
            android:id="@+id/encuadernado"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>



</LinearLayout>
